{
  "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
  "diagnostics": {
    "globals": [
      "love"
    ],
    "disable": [
      "lowercase-global"
    ]
  },
  "runtime": {
    "version": "LuaJIT",
    "special": {
      "love.filesystem.load": "loadfile"
    }
  },
  "workspace": {
    "library": [
      "${3rd}/love2d/library"
    ],
    "checkThirdParty": false
  },
  "completion": {
    "callSnippet": "Both",
    "keywordSnippet": "Both"
  }
}
